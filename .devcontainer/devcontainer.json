{
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/anthropics/devcontainer-features/claude-code:1.0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "postCreateCommand": "uv sync && echo 'âœ… uv environment ready!'",
  "containerEnv": {
    "UV_LINK_MODE": "copy"
  },
  "remoteEnv": {
    "UV_PROJECT_ENVIRONMENT": ".venv"
  }
}
